<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.FunActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jokeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.jokku.funapp.presentation.FunDataView
        android:id="@+id/jokeDataView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:actionButtonText="@string/get_joke"
        custom:checkBoxText="@string/show_favorite_joke" />

</LinearLayout>